function supporto_istanze_form($form, &$form_state, $sid, $uid, $tid, $checked, $field) {
  $form['user'] = array(
    '#type' => 'value',
    '#name' => 'user',
    '#value' => $uid,
  );
  $form['submission'] = array(
    '#type' => 'value',
    '#name' => 'submission',
    '#value' => $sid,
  );
  $form['tid'] = array(
    '#type' => 'value',
    '#name' => 'tid',
    '#value' => $tid,
  );
  $form['field'] = array(
    '#type' => 'value',
    '#name' => 'field',
    '#value' => $field,
  );
  if ($field == 'accolto') {
    $form['is_ok'] = array(
      '#type' => 'select',
      '#options' => array(
        0 => 'da esaminare',
        1 => 'istanza accolta',
        2 => 'istanza respinta',
      ),
      '#default_value' => $checked,
      '#attributes' => array(
        'onchange' => 'this.form.submit()',
        'title' => 'Selezionare per cambiare lo stato',
      ),
    );
  } else {
    $form['is_ok'] = array(
      '#type' => 'checkbox',
      '#default_value' => $checked,
      '#attributes' => array(
        'onclick' => 'this.form.submit()',
        'title' => 'Selezionare per cambiare lo stato',
      ),
    );
  }
  $form['hidden_submit'] = array(
    '#type' => 'submit',
    '#value' => 'Invia',
    '#attributes' => array(
      'style' => 'display:none',
    ),
  );
  return $form;
}

