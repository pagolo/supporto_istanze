function supporto_istanze_forms($form_id, $args) {
  $forms = array();
  if (!empty($args) && !empty($form_id) && strpos($form_id, 'supporto_istanze_form_') === 0) {
    $forms[$form_id] = array ('callback' => 'supporto_istanze_form');
  }
  return $forms;
}

